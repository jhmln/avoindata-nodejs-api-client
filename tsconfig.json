{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "eslint.config.mts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}